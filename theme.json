{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#3b82f6",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#6b7280",
                    "name": "Secondary"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "slug": "system",
                    "name": "System"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        }
    }
}